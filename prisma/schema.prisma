// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "/app/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StockMovementType {
  RESTOCK
  SALE
  ADJUSTMENT
  SPOILAGE
  RETURN
  INVENTORY_COUNT
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  logoUrl     String?
  address     String?
  phone       String?
  email       String?
  website     String?
  description String?
  settings    Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users          User[]
  products       Product[]
  tables         Table[]
  orders         Order[]
  reports        Report[]
  stockMovements StockMovement[]

  @@index([slug])
}

model User {
  id        String   @id @default(uuid())
  email     String
  password  String
  name      String?
  phone     String?
  bio       String?
  avatarUrl String?
  role      String   // ADMIN, BARTENDER, WAITER
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant         Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  reports        Report[]
  stockMovements StockMovement[]

  @@index([tenantId])
  @@index([email])
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String?
  price         Float
  stockQuantity Int      @default(0)
  isAvailable   Boolean  @default(true)
  lowStockThreshold Int  @default(5)
  unitOfMeasure String?  @default("unit")
  tenantId      String
  imageUrl      String?
  category      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
  stockMovements StockMovement[]

  @@index([tenantId])
  @@index([tenantId, isAvailable, stockQuantity])
  @@index([tenantId, lowStockThreshold])
}

model Table {
  id        String   @id @default(uuid())
  label     String
  qrCodeUrl String   @unique
  tenantId  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orders Order[]

  @@index([tenantId])
  @@index([qrCodeUrl])
}

model Order {
  id             String      @id @default(uuid())
  status         String      // PENDING_PAYMENT, PAID, PREPARING, READY, DELIVERED, CANCELLED
  totalAmount    Float
  tableId        String
  tenantId       String
  paymentIntentId String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  table      Table       @relation(fields: [tableId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tableId])
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  unitPrice Float
  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([productId])
}

model StockMovement {
  id            String           @id @default(uuid())
  type          StockMovementType
  delta         Int
  previousStock Int
  newStock      Int
  note          String?
  tenantId      String
  productId     String
  createdById   String?
  createdAt     DateTime         @default(now())

  tenant   Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  product  Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdBy User?  @relation(fields: [createdById], references: [id])

  @@index([tenantId])
  @@index([productId])
  @@index([tenantId, productId])
  @@index([createdAt])
}

model Report {
  id        String   @id @default(uuid())
  title     String
  period    String   // day, week, month, year, custom
  startDate DateTime
  endDate   DateTime
  data      Json
  tenantId  String
  creatorId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant  Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator User?  @relation(fields: [creatorId], references: [id])

  @@index([tenantId])
}
